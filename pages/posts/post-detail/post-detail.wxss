.detail-container{
  display: flex;
  flex-direction: column;
}
.detail-banner{
  width: 100%;
  height: 400rpx;
}
.audio{
  position: absolute;
  left:50%;
  top: 180rpx;
  margin-left: -50rpx;
  width: 100rpx;
  height: 100rpx;
  opacity: .8;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.author-date .avatar{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;  
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  margin-left: 20rpx;
  vertical-align: middle;
  color: #999;
}
.date{
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle
}
.circle-img image {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}
.share-img{
  margin-left: 30rpx;
}
.horizontal{
  position: relative;
  top:40rpx;
  z-index: -99;
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  background-color: #e5e5e5;
  vertical-align: middle;
}
.detail{
  color: #666;
  margin:20rpx 30rpx;
  letter-spacing: 2px;
  line-height: 44rpx;
}

