@import '../starts/starts-template.wxss';

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.head-img-hover {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;  
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  font-size: 22rpx;
  color:#f21146;
  margin-right: 10rpx;
}

.plain-font{
  font-size: 22rpx;
  color: #666;
  margin-right: 30rpx;
}

.movie-img {
  position: absolute;
  top: 160rpx;
  right: 30rpx;
  width: 175rpx;
  height: 238rpx;
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #1f3463;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.hr {
  width: 750rpx;
  height: 1px;
  margin-top: 45rpx;
  background-color: #d9d9d9;
}

.synopsis {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 50rpx;
}
.synopsis-font{
  color: #999;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

.cast {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 50rpx;
}

.cast-font {
  color:#999; 
  margin-bottom: 40rpx
}

.cast-imgs {
  white-space: nowrap;  
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}